{
  "expo": {
    "name": "تعلَّم الآن",
    "slug": "KnowNow",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-video",
      "expo-notifications"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          // OR the more secure option below:
          "NSExceptionDomains": {
            "10.154.21.234": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        }
      }
      

    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.abdulroufoyoun.KnowNow",
      "googleServicesFile": "./google-services.json"
    },
    "extra": {
      "eas": {
        "projectId": "9a8b2c9a-b699-42fb-a274-0320ed5b11f0"
      }
    },
    "owner": "abdulroufoyoun"
  }
}
